{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node10",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "paths": {
      "@/*": ["./*"]
    },
    "noImplicitAny": false
  },
  "include": [
    "api/**/*",
    "backend/**/*",
    "types.ts",
    "mocks/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".expo",
    "app"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
