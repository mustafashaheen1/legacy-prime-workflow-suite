{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "echo 'API-only, no build needed'",
  "outputDirectory": ".",
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.2.25"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.ts"
    }
  ]
}
