{
  "crons": [
    {
      "path": "/api/check-task-reminders",
      "schedule": "*/5 * * * *"
    }
  ],
  "buildCommand": "bunx expo export -p web",
  "outputDirectory": "dist",
  "installCommand": "bun install",
  "functions": {
    "api/ai-assistant.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/create-estimate.ts": {
      "maxDuration": 10,
      "memory": 512
    },
    "api/index.ts": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/update-project.ts": {
      "maxDuration": 30,
      "memory": 512
    },
    "api/add-payment.ts": {
      "maxDuration": 30,
      "memory": 512
    },
    "api/check-task-reminders.ts": {
      "maxDuration": 30,
      "memory": 512
    },
    "api/**/*.ts": {
      "maxDuration": 10,
      "memory": 1024
    }
  },
  "rewrites": [
    { "source": "/api/create-estimate", "destination": "/api/create-estimate" },
    { "source": "/api/stripe-payment", "destination": "/api/stripe-payment" },
    { "source": "/api/activate-subscription", "destination": "/api/activate-subscription" },
    { "source": "/trpc/(.*)", "destination": "/api" },
    { "source": "/((?!api).*)", "destination": "/index.html" }
  ]
}

